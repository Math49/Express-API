<%- include('../components/head') %>

<title>Connexion</title>
</head>
<body>
    <%- include('../components/header') %>

    <div class="separator bg-gradient-ypt"></div>

    <div class="flex items-center justify-center min-h-[70vh]">
        <div class="w-[30vw] bg-white shadow-lg rounded-lg p-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Connexion</h1>

            <!-- Formulaire de connexion -->
            <form id="loginForm">
                <div class="mb-4">
                    <label for="email" class="block text-gray-600 font-semibold mb-2">Adresse email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="w-full border rounded-lg px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre email"
                        required
                    />
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-600 font-semibold mb-2">Mot de passe</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="w-full border rounded-lg px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Votre mot de passe"
                        required
                    />
                </div>

                <button
                    type="submit"
                    class="w-full bg-blue-500 text-white py-2 rounded-lg font-semibold hover:bg-blue-600 transition duration-200"
                >
                    Se connecter
                </button>
            </form>

            <div class="mt-4 text-center">
                <p class="text-gray-600">
                    Pas encore inscrit ?
                    <a href="/register" class="text-blue-500 hover:underline">Cr√©er un compte</a>
                </p>
            </div>
        </div>
    </div>

    <%- include('../components/footer') %>

    <script src="/static/script/loginScript.js"></script>
</body>
</html>
